// ---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "dumpthread.h"
#include "vdskapi.h"
#include "functions.h"
#include <stdio.h>
#include "main.h"

#pragma package(smart_init)
extern TForm1 *Form1;
extern bool ramdisk;
extern double disksize;
extern LPVOID memory;
// ---------------------------------------------------------------------------

// Important: Methods and properties of objects in VCL can only be
// used in a method called using Synchronize, for example:
//
// Synchronize(&UpdateCaption);
//
// where UpdateCaption could look like:
//
// void __fastcall dumpthread::UpdateCaption()
// {
// Form1->Caption = "Updated in a thread";
// }
// ---------------------------------------------------------------------------

__fastcall dumpthread::dumpthread(bool CreateSuspended):TThread(CreateSuspended)
{
}
// ---------------------------------------------------------------------------
extern double disksize;

void __fastcall dumpthread::Execute()
{
    NameThreadForDebugging("dumpthread");
    // ---- Place thread code here ----
    Form1->current->Text = "создание образа ...";
    deb("сохраняем в файл 0fulldump.txt ...");
           Application->ProcessMessages();
    char *b = new char[disksize];

    if (!ramdisk)
        nread((unsigned long)b, 0, disksize, 0);
    else
        memcpy(b, memory, disksize);

    unlink("0fulldump.txt");
    dump(b, disksize, "fulldump");

    int crc = checksum((unsigned short*)b, disksize);
    char temp[129];
    sprintf(temp, " * Образ сохранён, CRC=0x%04X", crc);
    deb(temp);
    Form1->current->Text = temp;
    delete[]b;
    Form1->Button4->Enabled = true;

    extern bool ramdisk;
    if (!ramdisk)
        Form1->Button5Click(NULL);
}
// ---------------------------------------------------------------------------
